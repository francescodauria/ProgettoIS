<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lineborder_customlist"
        android:layout_marginBottom="20dp"
        >



        <ImageView
            android:layout_marginLeft="5dip"
            android:id="@+id/elem_lista_logo"
            android:layout_height="160dp"
            android:layout_width="160dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/button_customlist"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            >

            <TextView
                android:textAllCaps="false"
                android:fontFamily="sans-serif-smallcaps"
                android:id="@+id/elem_lista_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"

                style="?android:attr/borderlessButtonStyle"
                android:textSize="21sp" />
            <TextView
                android:textAllCaps="false"
                android:id="@+id/elem_lista_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"

                style="?android:attr/borderlessButtonStyle"
                android:textSize="15sp" />

            <Button
                android:textAllCaps="false"
                android:text="Visualizza descrizione"
                android:id="@+id/elem_lista_descrizione"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="25dip"
                android:layout_marginLeft="20dip"
                android:gravity="left"
                android:onClick="onDescrClick"
                android:background="@drawable/button_descrizione"
                android:textSize="12sp"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
