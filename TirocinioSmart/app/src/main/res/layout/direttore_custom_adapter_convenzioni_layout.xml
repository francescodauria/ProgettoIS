<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lineborder_customlist"
    android:orientation="vertical"

    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >



        <ImageView
            android:layout_marginLeft="5dip"
            android:id="@+id/elem_lista_logo_convenzione"
            android:layout_height="160dp"
            android:layout_width="160dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/button_customlist"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            >

            <TextView
                android:textColor="#000000"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-smallcaps"
                android:id="@+id/elem_lista_nome_convenzione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"

                style="?android:attr/borderlessButtonStyle"
                android:textSize="21sp" />
            <TextView
                android:textColor="#000000"
                android:textAllCaps="false"
                android:id="@+id/elem_lista_mail_convenzione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"

                style="?android:attr/borderlessButtonStyle"
                android:textSize="15sp" />

            <Button
                android:textAllCaps="false"
                android:text="Visualizza descrizione"
                android:id="@+id/elem_lista_descrizione_convenzione"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="25dip"
                android:layout_marginLeft="20dip"
                android:textColor="#000000"
                android:gravity="left"
                android:onClick="onDescrClickConvenzione"
                android:background="@drawable/button_descrizione"
                android:textSize="12sp"/>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:textColor="#000000"
        android:id="@+id/accettaConvenzione"
        android:background="@drawable/border_black_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Accetta"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textColor="#000000"
        android:id="@+id/rifiutaConvenzione"
        android:background="@drawable/border_black_button"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Rifiuta"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
