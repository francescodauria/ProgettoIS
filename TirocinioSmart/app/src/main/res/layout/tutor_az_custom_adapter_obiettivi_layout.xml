<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lineborder"
        android:layout_marginBottom="15dp"
        >

    <ImageView
        android:background="@drawable/obiettivolista"
        android:layout_width="80dp"
        android:layout_height="80dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lista_obiettivi_nome"
                android:textSize="20sp"
                android:gravity="center"
                android:text="prova"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="italic"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="prova"
                android:id="@+id/lista_obiettivi_descrizione"
                android:textSize="16sp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="italic"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/croce"
            android:id="@+id/button_cancel_obiettivo"
            android:layout_width="60dp"
            android:layout_height="60dp" />



    </RelativeLayout>
</LinearLayout>